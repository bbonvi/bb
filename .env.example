# bb production environment configuration
# Copy this file to .env and fill in the values

# Required: Authentication token for API access (16+ chars recommended)
BB_AUTH_TOKEN=your-secret-token-here

# Host/port binding (default: localhost only)
# Use 0.0.0.0 to expose to all interfaces (not recommended without reverse proxy)
BB_HOST=127.0.0.1
BB_PORT=8080

# Data persistence: either a named volume or absolute host path
# Named volume (default):
BB_DATA_PATH=bb-data
# Or host path:
# BB_DATA_PATH=/path/to/bb/data

# Optional: Peekalink API key for enhanced link previews
# PEEKALINK_API_KEY=

# Optional: Iframely API key for rich metadata extraction
# IFRAMELY_API_KEY=

# Optional: Proxy for metadata fetching
# HTTP_PROXY=socks5://127.0.0.1:8060
# OPT_PROXY=socks5://127.0.0.1:8060

# Logging level
RUST_LOG=info,bb=info,tower_http::trace::on_response=warn
